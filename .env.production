#################################
# Jitsi Multitrack Recording Setup
# PRODUCTION CONFIGURATION
#################################

# ===================================
# Basic Configuration
# ===================================

# Public URL for accessing Jitsi Meet
# IMPORTANT: Do NOT include protocol (https://)
# Change this to your actual domain!
PUBLIC_URL=meet.yourdomain.com

# XMPP Domain (keep default)
XMPP_DOMAIN=meet.jitsi

# Timezone (set to your timezone)
TZ=UTC

# ===================================
# Port Configuration
# ===================================

# HTTP Port (will redirect to HTTPS in production)
HTTP_PORT=80

# HTTPS Port
HTTPS_PORT=443

# JVB UDP Port (for media) - MUST be open in firewall!
JVB_PORT=10000

# JVB TCP Port (fallback)
JVB_TCP_PORT=4443

# ===================================
# Security Configuration
# ===================================

# Authentication (0=disabled, 1=enabled)
# For production, consider enabling authentication
ENABLE_AUTH=0

# Allow guests to join
ENABLE_GUESTS=1

# Enable HTTPS for production
DISABLE_HTTPS=0

# Let's Encrypt (automatic SSL certificates)
ENABLE_LETSENCRYPT=1

# HTTP redirect (redirect HTTP to HTTPS)
ENABLE_HTTP_REDIRECT=1

# ===================================
# Jitsi Component Passwords
# IMPORTANT: Generate secure passwords!
# ===================================

# Generate with: openssl rand -hex 32
JICOFO_COMPONENT_SECRET=CHANGEME_RUN_GENERATE_PASSWORDS_SCRIPT
JICOFO_AUTH_PASSWORD=CHANGEME_RUN_GENERATE_PASSWORDS_SCRIPT
JVB_AUTH_PASSWORD=CHANGEME_RUN_GENERATE_PASSWORDS_SCRIPT
JIBRI_RECORDER_PASSWORD=CHANGEME_RUN_GENERATE_PASSWORDS_SCRIPT

# ===================================
# Network Configuration (PRODUCTION)
# ===================================

# Set this to your server's public IP address
# Example: DOCKER_HOST_ADDRESS=203.0.113.10
DOCKER_HOST_ADDRESS=YOUR_SERVER_PUBLIC_IP

# Enable STUN servers for NAT traversal
JVB_STUN_SERVERS=meet-jit-si-turnrelay.jitsi.net:443

# Enable TCP harvester for better connectivity
JVB_TCP_HARVESTER_DISABLED=false

# ===================================
# Recording Configuration
# ===================================

# Auto-start recording when meetings begin (1=yes, 0=no)
ENABLE_AUTO_RECORDING=1

# ===================================
# Advanced Settings
# ===================================

# Auth type (internal for password, jwt for tokens)
AUTH_TYPE=internal

# Transcriptions (disabled by default)
ENABLE_TRANSCRIPTIONS=0
